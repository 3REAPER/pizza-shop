<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.pizzaShop" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#FBFBFB</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">#FBFBFB</item>
    </style>

    <style name="textStyleLight" parent="Theme.pizzaShop">
        <item name="android:textColor">#AAAAAD</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>


    <style name="textStyleBold" parent="Theme.pizzaShop">
        <item name="android:textColor">#222831</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="category_enabled" parent="Theme.pizzaShop">
        <item name="android:textColor">@color/pink</item>
        <item name="android:background">@drawable/background_category_enabled</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="category_disabled" parent="Theme.pizzaShop">
        <item name="android:textColor">#C3C4C9</item>
        <item name="fontFamily">@font/sf_ui_display</item>
        <item name="android:background">@drawable/background_category_disabled</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BottomNavigationBar" parent="Theme.AppCompat.Light">
        <item name="colorSecondaryContainer">#F0F0F0</item>
        <item name="android:background">#F0F0F0</item>
        <item name="itemIconTint">@color/selector_navigation_bar</item>
        <item name="itemTextColor">@color/selector_navigation_bar</item>
    </style>

    <style name="BottomNavigationBarItem" parent="Theme.AppCompat.Light">
        <item name="itemIconTint">@color/selector_navigation_bar</item>
        <item name="itemTextColor">@color/selector_navigation_bar</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>
</resources>